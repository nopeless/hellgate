{
  "extends": "nopeless-config/tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "moduleResolution": "NodeNext",
    "rootDir": "./src",
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "hellgate": [
        "./src/index.js"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "./node_modules",
    "./dist",
    "./archive/*"
  ],
}
