{
  "compilerOptions": {
    "types": [
      "node",
    ],
    "lib": [
      "ESNext",
    ],
    "target": "es2022",
    "module": "es2022",
    "esModuleInterop": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "strict": true,
    "paths": {
      "@src": [
        "./src"
      ]
    }
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "./node_modules",
    "/archive/*"
  ],
}
